  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
