{
	"name": "galaxy-workflows",
	"displayName": "Galaxy Workflows",
	"description": "Utilities to assist in the edition of Galaxy (https://galaxyproject.org/) Workflow files.",
	"version": "0.0.1",
	"publisher": "galaxyproject",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Linters",
		"Snippets",
		"Formatters",
		"Other"
	],
	"browser": "./dist/web/extension.js",
	"activationEvents": [
		"onLanguage:galaxyworkflow"
	],
	"contributes": {
		"languages": [
			{
				"id": "galaxyworkflow",
				"aliases": [
					"Galaxy Workflow"
				],
				"extensions": [
					".ga"
				],
				"configuration": "./src/language-configurations/json.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "galaxyworkflow",
				"scopeName": "source.json",
				"path": "./src/syntaxes/json.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/mocha": "^9.1.0",
		"eslint": "^8.8.0",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"mocha": "^9.2.0",
		"typescript": "^4.5.5",
		"@vscode/test-web": "^0.0.19",
		"ts-loader": "^9.2.6",
		"webpack": "^5.67.0",
		"webpack-cli": "^4.9.2",
		"@types/webpack-env": "^1.16.3",
		"assert": "^2.0.0",
		"process": "^0.11.10"
	}
}
