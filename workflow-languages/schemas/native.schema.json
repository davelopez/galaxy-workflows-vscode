{
  "id": "https://galaxyproject.org/schemas/workflow/native",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "a_galaxy_workflow": {
      "type": "string",
      "title": "Galaxy Workflow indicator",
      "markdownDescription": "Indicates that this JSON document is a **Galaxy Workflow**",
      "default": "true",
      "enum": ["true"]
    },
    "name": {
      "type": "string",
      "title": "Workflow name",
      "markdownDescription": "Name for the workflow"
    },
    "annotation": {
      "type": "string",
      "title": "Workflow annotation",
      "markdownDescription": "Annotation for the workflow"
    },
    "creator": {
      "$ref": "#/definitions/creator"
    },
    "license": {
      "type": "string",
      "title": "License",
      "markdownDescription": "License for workflow redistribution",
      "enum": [
        "Apache-2.0",
        "Artistic-2.0",
        "BSD-2-Clause",
        "BSD-3-Clause",
        "CC-BY-4.0",
        "CC-BY-SA-4.0",
        "CC0-1.0",
        "EPL-2.0",
        "AGPL-3.0-or-later",
        "GPL-3.0-or-later",
        "MIT",
        "MPL-2.0",
        "PDDL-1.0"
      ]
    },
    "format-version": {
      "type": "string",
      "markdownDescription": "Always 0.1 for JSON-formatted workflows.",
      "default": "0.1",
      "enum": ["0.1"]
    },
    "release": {
      "type": "string",
      "markdownDescription": "Release attribute. This is used only by the IWC, not Galaxy itself.",
      "pattern": "^[0-9.]*$"
    },
    "tags": {
      "$ref": "#/definitions/tags"
    },
    "uuid": {
      "type": "string",
      "markdownDescription": "UUID associated with the workflow.",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "steps": {
      "$ref": "#/definitions/steps"
    },
    "version": {
      "type": "integer",
      "minimum": 0,
      "title": "Workflow version",
      "markdownDescription": "Workflow version bumped by Galaxy when changes are made in the editor.",
      "default": 0
    }
  },
  "required": ["a_galaxy_workflow", "format-version", "name", "steps"],
  "definitions": {
    "creator": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/contributor"
        }
      ]
    },
    "contributor": {
      "type": "object",
      "properties": {
        "class": {
          "type": "string",
          "default": "Person",
          "enum": ["Person", "Organization"]
        },
        "name": {
          "type": "string"
        },
        "alternateName": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "image": {
          "type": "string",
          "description": "URL to an image"
        },
        "address": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "telephone": {
          "type": "string"
        },
        "faxNumber": {
          "type": "string"
        }
      },
      "if": {
        "properties": { "class": { "const": "Person" } }
      },
      "then": {
        "properties": {
          "identifier": {
            "type": "string",
            "markdownDescription": "A unique identifier of the creator, e.g. their **ORCID**"
          },
          "givenName": {
            "type": "string"
          },
          "familyName": {
            "type": "string"
          },
          "honorificPrefix": {
            "type": "string"
          },
          "honorificSuffix": {
            "type": "string"
          },
          "jobTitle": {
            "type": "string"
          }
        }
      },
      "else": {
        "properties": {
          "identifier": {
            "type": "string",
            "description": "A unique identifier of the creating organization"
          }
        }
      },
      "required": ["class", "identifier", "name"]
    },
    "tags": {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "steps": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9]*$": {
          "$ref": "#/definitions/step"
        }
      },
      "defaultSnippets": [
        {
          "label": "Workflow Step",
          "description": "Defines a workflow step with basic properties",
          "body": {
            "${1:0}": {
              "id": "^$1",
              "name": "$2",
              "label": "$3",
              "annotation": "$4",
              "inputs": [],
              "outputs": []
            }
          }
        }
      ]
    },
    "step": {
      "type": "object",
      "properties": {
        "annotation": {
          "type": "string"
        },
        "content_id": {
          "$ref": "#/definitions/optionalString"
        },
        "errors": {
          "type": "null"
        },
        "id": {
          "type": "integer"
        },
        "input_connections": {
          "type": "object"
        },
        "inputs": {
          "$ref": "#/definitions/inputs"
        },
        "outputs": {
          "$ref": "#/definitions/outputs"
        },
        "label": {
          "$ref": "#/definitions/optionalString"
        },
        "name": {
          "type": "string"
        },
        "position": {
          "$ref": "#/definitions/position"
        },
        "type": {
          "type": "string",
          "enum": ["tool", "subworkflow", "parameter_input", "data_input", "data_collection_input"]
        },
        "uuid": {
          "type": "string",
          "markdownDescription": "UUID associated with the workflow step.",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "workflow_outputs": {
          "$ref": "#/definitions/workflowOutputs"
        }
      },
      "if": {
        "properties": { "type": { "const": "tool" } }
      },
      "then": {
        "properties": {
          "tool_id": {
            "$ref": "#/definitions/optionalString"
          },
          "tool_state": {
            "type": "string"
          },
          "tool_version": {
            "$ref": "#/definitions/optionalString"
          }
        },
        "required": ["tool_id", "tool_version", "tool_state"]
      },
      "else": {
        "if": {
          "properties": { "type": { "const": "subworkflow" } }
        },
        "then": {
          "properties": {
            "subworkflow": {
              "type": "object",
              "$ref": "#"
            }
          },
          "required": ["subworkflow"]
        }
      },
      "required": [
        "annotation",
        "id",
        "input_connections",
        "inputs",
        "name",
        "outputs",
        "type",
        "uuid",
        "workflow_outputs"
      ]
    },
    "inputs": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/input"
        }
      ]
    },
    "input": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["description", "name"]
    },
    "outputs": {
      "type": "array",
      "items": {}
    },
    "workflowOutputs": {
      "type": "array",
      "items": {}
    },
    "position": {
      "type": "object",
      "properties": {
        "left": {
          "type": "number"
        },
        "top": {
          "type": "number"
        }
      },
      "required": ["left", "top"]
    },
    "optionalString": {
      "type": ["string", "null"]
    }
  }
}
